{
  "name": "short_cuts",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "security": "audit-ci --config .audit-ci.json",
    "start": "next start",
    "lint": "next lint --dir ./src --dir ./jest",
    "lint:clean": "next lint --fix --dir ./jest --dir ./src; prettier --write \"./(src|jest)/**/*.+(ts|tsx|js|jsx|json|yml|yaml|css|scss|md|vue)\"",
    "test": "jest --watch",
    "test:coverage": "jest test --coverage --coverageDirectory=coverage --watchAll=false",
    "test:types": "tsc"
  },
  "overrides": {
    "@babel/traverse": ">=7.23.2",
    "eslint-plugin-unused-imports": {
      "@typescript-eslint/eslint-plugin": "^5.0.0"
    },
    "node-fetch": "^2.6.7",
    "postcss": ">=8.4.31",
    "semver": ">=7.5.2",
    "use-persisted-reducer": {
      "react": "^18.0.0"
    }
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.54.0",
    "@aws-sdk/client-s3": "^3.54.0",
    "@chakra-ui/icons": "^2.0.0",
    "@chakra-ui/react": "^2.0.0",
    "deep-keys": "^0.5.0",
    "express-validator": "^6.14.0",
    "formik": "^2.2.9",
    "framer-motion": "^5.6.0",
    "next": "^12.1.0",
    "next-connect": "^0.11.1",
    "next-i18next": "^13.0.0",
    "node-fetch": "^2.6.7",
    "react": "^18.0.0",
    "react-cookie-consent": "^7.3.1",
    "react-dom": "^18.0.0",
    "react-error-boundary": "^3.1.0",
    "react-ga": "^3.3.0",
    "react-i18next": "^12.0.0",
    "react-icons": "^4.3.1"
  },
  "devDependencies": {
    "@emotion/jest": "^11.8.0",
    "@emotion/react": "^11.8.2",
    "@emotion/styled": "^11.8.1",
    "@swc/core": "^1.3.96",
    "@swc/jest": "^0.2.29",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.0.0",
    "@types/js-cookie": "^3.0.1",
    "@types/node": "^16.11.26",
    "@types/react": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "audit-ci": "^6.6.1",
    "babel-jest": "^29.0.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "^12.1.0",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-unused-imports": "^1.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "next-router-mock": "^0.6.5",
    "node-mocks-http": "^1.11.0",
    "prettier": "^2.5.1",
    "typescript": "^4.6.2"
  },
  "engines": {
    "npm": "^8.0.0",
    "node": "^16.0.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/src/**/fixtures/*.{js,jsx,ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/pages/_app.tsx",
      "<rootDir>/src/pages/_document.tsx"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "globalSetup": "<rootDir>/jest/globalSetup.js",
    "setupFilesAfterEnv": [
      "<rootDir>/jest/setup/emotion.js",
      "<rootDir>/jest/setup/encoding.js",
      "<rootDir>/jest/setup/fetch.js",
      "<rootDir>/jest/setup/i18next.js",
      "<rootDir>/jest/setup/next.jsx",
      "<rootDir>/jest/setup/testing-library.js"
    ],
    "moduleNameMapper": {
      ".+\\.(css|styl|less|sass|scss)$": "identity-obj-proxy",
      ".+\\.(png|jpg|ttf|woff|woff2)$": "<rootDir>/jest/modules/images.js"
    },
    "roots": [
      "./src"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest",
        {
          "sourceMaps": "inline",
          "jsc": {
            "parser": {
              "syntax": "typescript",
              "tsx": true,
              "decorators": false,
              "dynamicImport": false
            },
            "transform": {
              "react": {
                "runtime": "automatic"
              }
            }
          }
        }
      ]
    },
    "verbose": true
  }
}

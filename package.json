{
  "name": "short_cuts",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --dir ./src --dir ./jest",
    "lint:clean": "next lint --fix --dir ./jest --dir ./src; prettier --write \"./(src|jest)/**/*.+(ts|tsx|js|jsx|json|yml|yaml|css|scss|md|vue)\"",
    "test": "jest --watch",
    "test:coverage": "jest test --coverage --coverageDirectory=coverage --watchAll=false",
    "test:types": "tsc"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.44.0",
    "@aws-sdk/client-s3": "^3.44.0",
    "@chakra-ui/icons": "^1.1.1",
    "@chakra-ui/react": "^1.7.3",
    "deep-keys": "^0.5.0",
    "express-validator": "^6.14.0",
    "formik": "^2.2.9",
    "framer-motion": "^5.5.5",
    "next": "^11.1.3",
    "next-connect": "^0.11.0",
    "next-i18next": "^8.10.0",
    "node-fetch": "^2.6.6",
    "react": "^17.0.2",
    "react-cookie-consent": "^6.4.1",
    "react-dom": "^17.0.2",
    "react-ga": "^3.3.0",
    "react-icons": "^4.3.1"
  },
  "devDependencies": {
    "@emotion/jest": "^11.6.0",
    "@emotion/react": "^11.7.0",
    "@emotion/styled": "^11.6.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.3",
    "@types/js-cookie": "^3.0.1",
    "@types/node": "^16.11.12",
    "@types/react": "^17.0.37",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "babel-jest": "^27.4.4",
    "eslint": "^7.32.0",
    "eslint-config-next": "^12.0.7",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-unused-imports": "^1.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.4",
    "next-router-mock": "^0.6.3",
    "node-mocks-http": "^1.11.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/src/**/fixtures/*.{js,jsx,ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/pages/_app.tsx",
      "<rootDir>/src/pages/_document.tsx"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "globalSetup": "<rootDir>/jest/globalSetup.js",
    "setupFilesAfterEnv": [
      "<rootDir>/jest/setup/emotion.js",
      "<rootDir>/jest/setup/fetch.js",
      "<rootDir>/jest/setup/i18next.js",
      "<rootDir>/jest/setup/testing-library.js"
    ],
    "moduleNameMapper": {
      ".+\\.(css|styl|less|sass|scss)$": "identity-obj-proxy",
      ".+\\.(png|jpg|ttf|woff|woff2)$": "<rootDir>/jest/modules/images.js"
    },
    "roots": [
      "./src"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": [
        "babel-jest",
        {
          "presets": [
            "next/babel"
          ]
        }
      ]
    },
    "testEnvironment": "jsdom",
    "verbose": true
  }
}
